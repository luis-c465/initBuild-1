#:kivy 1.0

MDScreen:

    MDLabel:
        text: "Hello, World!"
        halign: "center"

    MDScrollView:
        MDGridLayout:
            cols: 5
            id: images_grid
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            spacing: 10
            row_default_height: "500dp"
            row_force_default: True

            MDSmartTile:
                radius: 24
                box_radius: [0, 0, 24, 24]
                box_color: 1, 1, 1, .2
                source: "ui/cat.jpg"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: None, None
                size: "320dp", "320dp"

                MDIconButton:
                    icon: "heart-outline"
                    theme_icon_color: "Custom"
                    icon_color: 1, 0, 0, 1
                    pos_hint: {"center_y": .5}
                    on_release: self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"

                MDLabel:
                    text: "Julia and Julie"
                    bold: True
                    color: 1, 1, 1, 1
